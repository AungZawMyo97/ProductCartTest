@model ProductCartTest.Models.ViewModels.ProductViewModel
@{
	ViewData["Title"] = "Create Product";
}

<h2>Add Product</h2>
<form asp-action="Create" method="post">
	<div class="form-group">
		<label for="ProductName" class="form-label"></label>
		<input name="ProductName" placeholder="Enter Product Name" class="form-control" />
		<span class="text-danger"></span>
	</div>
	<div class="form-group">
		<label for="ProductDescription" class="control-label"></label>
		<input name="ProductDescription" placeholder="Enter Product Description" class="form-control" />
		<span class="text-danger"></span>
	</div>
	<div class="form-group">
		<label for="Price" class="control-label"></label>
		<input name="Price" placeholder="Enter Price" class="form-control" />
		<span class="text-danger"></span>
	</div>
	<div class="form-group">
		<label for="Stock" class="control-label"></label>
		<input name="Stock" placeholder="Enter Stock" class="form-control" />
		<span class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary my-4 me-4">Create</button>
	<a asp-action="Index">Back</a>
</form>