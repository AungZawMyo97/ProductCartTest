@model ProductCartTest.Models.ViewModels.ProductViewModel
@{
	ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>
<div class="my-4">
	<h5>Are you sure you want to delete this Product?</h5>
	<div>
		<p>Product Name: @Model.ProductName</p>
		<p>Product Description: @Model.ProductDescription</p>
		<p>Price: @Model.FormattedPrice</p>
		<p>Stock: @Model.Stock</p>
		<p>Created At: @Model.FormattedCreatedDate</p>
	</div>
</div>

<form method="post" asp-action="DeleteProduct">
	<input type="hidden" asp-for="Id" />
	<div class="form-group">
		<button type="submit" class="btn btn-danger me-2">Delete</button>
		<a asp-action="Index" class="btn btn-secondary">Cancel</a>
	</div>
</form>