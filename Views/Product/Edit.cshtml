@model ProductCartTest.Models.ViewModels.ProductViewModel
@{
	ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
	<div class="form-group">
		<label for="ProductName" class="form-label"></label>
		<input asp-for="ProductName" placeholder="Enter Product Name" class="form-control" />
		<span class="text-danger"></span>
	</div>
	<div class="form-group">
		<label for="ProductDescription" class="control-label"></label>
		<input asp-for="ProductDescription" placeholder="Enter Product Description" class="form-control" />
		<span class="text-danger"></span>
	</div>
	<div class="form-group">
		<label for="Price" class="control-label"></label>
		<input asp-for="Price" placeholder="Enter Price" class="form-control" />
		<span class="text-danger"></span>
	</div>
	<div class="form-group">
		<label for="Stock" class="control-label"></label>
		<input asp-for="Stock" placeholder="Enter Stock" class="form-control" />
		<span class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary my-4">Update</button>
	<a asp-action="Index" class="btn btn-secondary">Back</a>
</form>